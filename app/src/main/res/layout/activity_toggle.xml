<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_toggle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="my.assignment.applicationthree.ToggleActivity">

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="207dp"
        android:layout_height="68dp"
        android:id="@+id/toggleButton"
        android:textOff="@string/toggleOff"
        android:textOn="@string/toggleOn"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginTop="40dp"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.29" />

    <ImageView
        android:src="@android:drawable/star_big_on"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="@+id/activity_toggle"
        android:layout_marginStart="130dp"
        app:layout_constraintTop_toTopOf="@+id/activity_toggle"
        android:layout_marginTop="72dp"
        app:layout_constraintRight_toRightOf="@+id/activity_toggle"
        android:layout_marginEnd="160dp"
        app:layout_constraintHorizontal_bias="0.51" />
</android.support.constraint.ConstraintLayout>
